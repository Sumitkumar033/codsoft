//THIS  IS  THE SIMPLE  CALCULATOR  TO  PERFORM ARITHEMATIC  OPERATIONS  [+,-,*,/]

#include<iostream>
using namespace std;
int main()
{
    char op;
    float a,b;
    cout<<"enter operator="<<endl;
    cin>>op;
    cout<<"enter the number"<<endl;
    cin>>a;

    cout<<"enter the number="<<endl;
    cin>>b;

    switch (op)
    {
    case '+':
    cout<<a<<"+"<<b<<"="<<a+b<<endl;     
     break;

     case '-':
     cout<<a<<"-"<<b<<"="<<a-b<<endl;
     break;

     case '*':
     cout<<a<<"*"<<b<<"="<<a*b<<endl;
     break;

     case '/':
     cout<<a<<"/"<<b<<"="<<a/b<<endl;
     break;
    
    
    default:
    cout<<"opretor not found";
        break;
    }

    return 0;
}
